
@model Book 

<!-- this page turns the entire line of books into a seperate object for cleaner Index.cshtml page-->
<tr>
    <th>@Model.BookId</th>
    <th>@Model.Title</th>
    <th>@Model.AuthorLName</th>
    <th>@Model.AuthorFName</th>
    <th>@Model.Publisher</th>
    <th>@Model.Classification</th>
    <th>@Model.Category</th>
    <th>$@Model.Price</th>
    <th>@Model.ISBN</th>
    <th>
        <form id="@Model.BookId" asp-page="/Buy" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @*Model.Title*@
                <button type="submit" class="bnt-success btn-sm pull-right" style="float:right">
                    Buy
                </button>
            </span>
        </form>
    </th>
</tr>

